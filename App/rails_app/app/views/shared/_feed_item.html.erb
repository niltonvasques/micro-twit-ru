<div class="col-xs-12 status">
  <div class="col-xs-12 status-top">
    <div class="col-xs-4 icon-user">
      <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    </div>
    <div class="col-xs-8 status-content">
      <div class="status-content-meta">
        <span class="user-name">
          <%= link_to feed_item.user.name, feed_item.user %>
        </span>
        <span class="elapsed-time">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
      </div>
      <div class="status-content-text">
        <span>
          <%= wrap(feed_item.content) %>
        </span>
      </div>
    </div>
  </div>
  <div class="col-xs-12 status-bottom">
    <div class="col-xs-4 status-action">
      <label class="count-action"><%= feed_item.likes %></label>
      <%= link_to "", like_micropost_path(feed_item), method: :post, class: "glyphicon glyphicon-thumbs-up"  %>
      <!-- <span class="action-name">n</span> -->
    </div>
    <div class="col-xs-4 status-action">
      <label class="count-action"><%= feed_item.dislikes %></label>
      <%= link_to "", dislike_micropost_path(feed_item), method: :post, class: "glyphicon glyphicon-thumbs-down"  %>
      <!-- <span class="action-name">n</span> -->
    </div>
    <div class="col-xs-4 status-action">
      <label class="count-action"><%= feed_item.retweets %></label>
      <% if current_user == feed_item.user %>
        <span class="glyphicon glyphicon-retweet"></span>
      <% else %>
        <%= link_to "", retweet_micropost_path(feed_item), method: :post, 
          confirm: "VocÃª tem certeza?", class: "glyphicon glyphicon-retweet" %>
      <% end %>
      <!-- <span class="action-name">n</span> -->
    </div>
  </div>
</div>

